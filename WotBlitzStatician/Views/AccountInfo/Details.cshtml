@model WotBlitzStatician.ViewModel.AccountInfoViewModel
@{
	ViewData["NickName"] = Model.NickName;
	ViewData["AccountId"] = Model.AccountId;
}

<h2>@Model.NickName []</h2>
<table class="table">
	<tr>
		<td>
			Последний бой
		</td>
		<td>
			@Html.DisplayFor(m => m.LastBattleTime, null)
		</td>
	</tr>
	<tr>
		<td>
			Боёв
		</td>
		<td>
			@Html.DisplayFor(m => m.Battles, null)
		</td>
	</tr>
	<tr>
		<td>
			Побед
		</td>
		<td>
			@Html.DisplayFor(m => m.Wins, null) - 
			<b id="winrate">@Html.DisplayFor(m => m.Winrate, null)% (@Html.DisplayFor(m => m.WinrateGrade, null))</b>
		</td>
	</tr>
	<tr>
		<td>
			Wn7
		</td>
		<td id="wn7">
			<b>
				@Html.DisplayFor(m => m.Wn7, null) (@Html.DisplayFor(m => m.Wn7Grade, null))         
			</b>
		</td>
	</tr>
	<tr>
		<td>
			Средний урон
		</td>
		<td>
			@Html.DisplayFor(m => m.AvgDamage, null)
		</td>
	</tr>
	<tr>
		<td>
			Средний опыт
		</td>
		<td>
			@Html.DisplayFor(m => m.AvgXp, null)
		</td>
	</tr>
	<tr>
		<td>
			Танкоуровень
		</td>
		<td>
			@Html.DisplayFor(m => m.AvgTier, null)
		</td>
	</tr>
</table>

<script>
	var wn7Grade = "@Model.Wn7Grade.ToString()";
	var winrateGrade = "@Model.WinrateGrade.ToString()";
</script>